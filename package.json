{
  "name": "review-nudge",
  "displayName": "Review Nudge - GitHub PR Reminder",
  "description": "Never forget a PR review - shows pending GitHub reviews front and center when VS Code starts",
  "version": "0.1.2",
  "publisher": "gevtushenko",
  "repository": {
    "type": "git",
    "url": "https://github.com/gevtushenko/nudge"
  },
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:review-nudge.showReviews",
    "onCommand:review-nudge.refresh",
    "onCommand:review-nudge.dismiss",
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "review-nudge.showReviews",
        "title": "Show PR Reviews",
        "category": "Review Nudge"
      },
      {
        "command": "review-nudge.refresh",
        "title": "Refresh PR Reviews",
        "category": "Review Nudge",
        "icon": "$(refresh)"
      },
      {
        "command": "review-nudge.dismiss",
        "title": "Dismiss PR Reviews (for this session)",
        "category": "Review Nudge"
      }
    ],
    "configuration": {
      "title": "PR Review Reminder",
      "properties": {
        "prReviewReminder.autoShowOnStartup": {
          "type": "boolean",
          "default": true,
          "description": "Automatically show PR reviews when VS Code starts"
        },
        "prReviewReminder.onlyShowWhenPRsExist": {
          "type": "boolean",
          "default": false,
          "description": "Only show the panel automatically if you have pending PR reviews"
        },
        "prReviewReminder.refreshInterval": {
          "type": "number",
          "default": 300000,
          "description": "How often to refresh PR reviews (in milliseconds). Default is 5 minutes."
        },
        "prReviewReminder.showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "Show notifications for new PR reviews"
        },
        "prReviewReminder.githubToken": {
          "type": "string",
          "default": "",
          "description": "GitHub personal access token (optional, uses VS Code GitHub authentication by default)",
          "markdownDescription": "GitHub personal access token. Leave empty to use VS Code's built-in GitHub authentication."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/node": "20.x",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8",
    "eslint": "^8.54.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.3.2",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@octokit/auth-oauth-app": "^7.0.1",
    "@octokit/rest": "^20.0.2"
  }
}
